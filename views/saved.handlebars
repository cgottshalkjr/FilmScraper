{{#each articles}}
{{#if saved}}
<div class="container">
    <div class="col-md-4 float-left d-flex h-200">
        <div class="card card-body m-3" id="scrollCard" style="width: 18rem;">
            <picture>
                <img class="img-thumbnail rounded float-left m-1" id="cardImg" src="{{image}}">
                <h5><a href="{{link}}">{{title}}</a></h5>
            </picture>

            <div class="text-center">
                <button data-id="{{_id}}" class="btn btn-primary btn-lg buttonFonts commentBtn"
                    data-toggle="modal">Comments</button>
                <button data-id="{{_id}}" class="btn btn-primary btn-lg buttonFonts deleteBtn"
                    data-toggle="modal">Delete</button>
                {{!-- Beginning of  comments modal --}}
                <div class="modal" tabindex="-1" role="dialog" id="commentModal-{{_id}}">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="titleField">Title</label>
                                        <input type="text" class="form-control titleField-{{_id}}"
                                            placeholder="Title or Name or Something">
                                    </div>
                                    <div class="form-group">
                                        <label for="commentTextBody">Comment</label>
                                        <textarea class="form-control commentTextBody-{{_id}}" rows="3"></textarea>
                                    </div>
                                </form>
                                <div class="commentField">
                                    {{#comment}}
                                    <h5>{{title}}</h5>
                                    <p>{{text}}</p>
                                    {{/comment}}
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary buttonFonts" id="saveComment"
                                    data-id="{{_id}}">Save</button>
                                <button type="button" class="btn btn-primary buttonFonts"
                                    data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- End of Modal --}}
            </div>


        </div>

    </div>
</div>
{{/if}}
{{/each}}

