<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="carouselExampleControls" class="carousel slide border-0 shadow" data-ride="carousel">
                <div class="carousel-inner">
                    {{#each articles}}
                    {{#if @first}}
                    <div class="carousel-item active carItem">

                        <img class="d-block w-100" src="{{image}}" alt="First slide">
                        <div class="text-center btnDiv2">
                            <a class="btn btn-primary btn-lg buttonFonts" href="#" id="scrapeBtn" role="button">Save</a>
                            <a class="btn btn-primary btn-lg buttonFonts" href="#" id="deleteBtn"
                                role="button">Delete</a>
                        </div>
                        <div class="carousel-caption mb-4">
                            <a href="{{link}}">{{title}}</a>
                        </div>
                    </div>
                    {{else}}
                    <div class="carousel-item carItem">

                        <img class="d-block w-100" src="{{image}}" alt="First slide">
                        <div class="text-center btnDiv2">
                            <a class="btn btn-primary btn-lg buttonFonts" href="#" id="scrapeBtn" role="button">Save</a>
                            <a class="btn btn-primary btn-lg buttonFonts" href="#" id="deleteBtn"
                                role="button">Delete</a>
                        </div>
                        <div class="carousel-caption mb-4">
                            <a href="{{link}}">{{title}}</a>
                        </div>
                    </div>
                    {{/if}}
                    {{/each}}

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>




    {{#each articles2}}
    <div class="row m-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <picture>
                        <img class="img-thumbnail rounded float-left" id="cardImg" src="{{image}}">
                    </picture>
                    <h4><a href="{{link}}">{{title}}</a></h4>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>